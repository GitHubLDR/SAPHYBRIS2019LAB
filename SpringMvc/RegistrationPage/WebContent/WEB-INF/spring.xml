<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:context = "http://www.springframework.org/schema/context"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans     
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">
   
   <context:annotation-config/>
   
   <bean id="studentService" class="com.service.std.StudentServiceImp">
		<property name="studentDao" ref="studentDao"/>
	</bean>
	
	<bean id="studentDao" class="com.reg.dao.StudentJdbcDaoImp">
		<property name="driverManager" ref="driverManager"/>
		<property name="dburl" value="jdbc:oracle:thin:@localhost:1521:xe"/>
		<property name="dbUser" value="system"/>
		<property name="dbPassword" value="Lakshmi"/>
		<property name="driverType" value="oracle.jdbc.driver.OracleDriver"/>
	</bean>
	<bean id="driverManager" class="java.sql.DriverManager"/>
	
	
	
	<bean id="studentSpringJdbcImp" class="com.reg.dao.StudentSpringJdbcImp"/>
		
	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate"> 
		<constructor-arg ref="dataSource"/> 
		<!-- <property name="dataSource" ref="dataSource"/>   -->
	</bean> 
	 
	<!--  Using spring JDBC -->
	<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
		<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe" />
		<property name="username" value="system" />
		<property name="password" value="Lakshmi" />
	</bean>
</beans>